{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
